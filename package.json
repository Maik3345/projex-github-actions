  "files": [
    "dist",
    "action.yml"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.9.0",
    "@vercel/ncc": "^0.38.3",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "husky": "^9.1.7",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  }
}