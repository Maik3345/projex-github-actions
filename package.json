{
  "name": "projex-github-actions",
  "version": "1.5.1",
  "description": "Colección de GitHub Actions personalizadas en TypeScript para automatización avanzada.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run build:actions",
    "build:actions": "for config in src/**/tsconfig.json; do tsc -p \"$config\"; done",
    "prepare": "npx husky"
  },
  "files": [
    "dist",
    "action.yml"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.9.0",
    "husky": "^9.1.7",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  }
}